{
  "name": "effector-formula",
  "description": "Simple and minimal \"formula\" creator for effector with React for reusable and scoped stores",
  "author": "AkisARou",
  "private": false,
  "version": "0.0.1",
  "license": "MIT",
  "typings": "lib/index.d.ts",
  "type": "module",
  "keywords": [
    "react",
    "state management",
    "effector"
  ],
  "main": "lib/cjs/index.js",
  "module": "lib/esm/index.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "build": "npm run clean && npm run lint && npm run format && rollup -c",
    "clean": "rimraf lib",
    "lint": "eslint src --ext .js,.jsx,.ts,.tsx",
    "format": "prettier \"src/**/*.{ts,tsx}\" --write",
    "prepare": "husky install",
    "publish": "npm run build && np --no-tests --no-yarn --branch=main"
  },
  "peerDependencies": {
    "effector": "^22.3.0",
    "effector-react": "^22.0.6",
    "react": ">=16.8.0 <19.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@types/react": "^18.0.10",
    "@types/react-dom": "^18.0.5",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "effector": "^22.3.0",
    "effector-react": "^22.0.6",
    "eslint": "^8.16.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "eslint-plugin-react-hooks": "^4.5.0",
    "husky": "^8.0.1",
    "np": "^7.6.1",
    "prettier": "^2.6.2",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "rimraf": "^3.0.2",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "typescript": "^4.7.2"
  }
}
